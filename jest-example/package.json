{
  "name": "gaffer-jest-example",
  "version": "1.0.0",
  "description": "Gaffer Jest example with JSON and HTML reporting",
  "scripts": {
    "test": "jest",
    "test:json": "jest --json --outputFile=reports/jest-results.json",
    "test:html": "jest",
    "test:all": "npm run test:json && npm run test:html"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
